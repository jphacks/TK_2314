<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>つくってくん</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">つくってくん</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>冷蔵庫リスト</h1>
        <a href="/new" class="new-button">+ 追加</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">名称</span>
          <span>賞味期限</span>
        </div>
        <ul class="table-body">
          <%items.forEach((item) => { %>
            <li>
              <div class="item-data">
                <span class="id-column"><%= item.name %></span>
                <span class="name-column"><%= item.date %></span>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>